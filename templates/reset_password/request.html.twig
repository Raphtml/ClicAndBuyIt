{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="w-75 m-auto">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="mb-3">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm, {'attr': {'novalidate':'novalidate'}}) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary mt-3">Réinitialiser mon mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
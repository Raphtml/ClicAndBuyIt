{% extends'base.html.twig' %}

{% block body %}
    <form action="{{ path('login') }}" class="w-75 m-auto" method="post">
        <div class="form-group mb-md-3 mb-lg-3">
            <input class="form-control" placeholder="Adresse email" type="text" name="_username">
        </div>
        <div class="form-group mb-md-3 mb-lg-3">
            <input class="form-control" placeholder="Mot de passe" type="password" name="_password">
        </div>
        <div class="form-group mb-md-3 mb-lg-3">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
        <p>Pas encore inscrit ? <a href="{{ path('register') }}">Inscription</a></p>
    </form>

{% endblock %}